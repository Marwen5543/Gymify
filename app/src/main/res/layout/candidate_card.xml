<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_background_grey"
    android:layout_marginBottom="16dp"
    android:gravity="center_vertical"
    android:id="@+id/candidate_item">

    <!-- Profile Image -->
    <ImageView
        android:layout_marginStart="15dp"
        android:id="@+id/candidate_profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_image" />

    <!-- Candidate Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/candidate_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: Intermediate"
            android:textSize="14sp"
            android:textColor="#C7C7C7" />

        <TextView
            android:id="@+id/candidate_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objectif: Lose Weight"
            android:textSize="14sp"
            android:textColor="#C7C7C7" />
    </LinearLayout>

    <!-- Green Section with Circular Button -->
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_green">

        <!-- Circular Button in the Green Section -->
        <ImageView
            android:id="@+id/btn_details"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/more_button" />
    </RelativeLayout>
</LinearLayout>
