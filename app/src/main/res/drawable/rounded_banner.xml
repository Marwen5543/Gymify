<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle (Border) -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <!-- No fill color -->
            <solid android:color="@android:color/transparent" />

            <!-- Define the stroke (outline) -->
            <stroke
                android:width="4dp" android:color="@color/light_grey" />


            <!-- Size of the oval -->
            <size
                android:width="120dp"
                android:height="120dp"/> <!-- Adjust the width and height as needed for an oval -->
        </shape>
    </item>

    <!-- Inner Circle -->
    <item android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp">
        <shape android:shape="oval">
            <solid android:color="#7ed957" /> <!-- Green inner circle -->
        </shape>
    </item>

</layer-list>
